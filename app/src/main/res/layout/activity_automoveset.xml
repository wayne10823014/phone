<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sosbt"
                android:layout_width="20px"
                android:layout_weight="1"
                android:onClick="callsos"
                android:layout_height="match_parent"
                android:src="@drawable/sosimg" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:text="" />

            <ImageView
                android:id="@+id/settingbt"
                android:layout_width="20px"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_height="match_parent"
                android:src="@drawable/setimg" />

        </LinearLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="選擇跟隨目標"
            android:textSize="25dp"
            android:textStyle="bold" />

        <VideoView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="231dp"
            android:layout_marginTop="10dp"
            android:onClick="stop"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:onClick="stop"
            app:srcCompat="@drawable/yoloexample" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="目標顯示"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/targetimg"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="200dp"
            android:onClick="targetselect"
            app:srcCompat="@drawable/aim" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/endbt"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:text="結束"
                android:textSize="20dp"
                app:backgroundTint="#145B7D" />

            <Button
                android:id="@+id/manualbtn"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="25dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:text="手動模式"
                app:backgroundTint="#145B7D" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
